:-module('ai1',[chooseMove1/4]).
:-use_module([library(lists),io,fill,end,utils,ai1]).

chooseMove1(AI,X,Y,Board):-
    findall([XX,YY],getLegalMove(AI,XX,YY,Board),MoveList),
    writeln(MoveList),
    length(MoveList,L),
    LL is L-1,
    writeln(LL),
    random(0,LL,N),
    nth0(N,MoveList,[X,Y]).

